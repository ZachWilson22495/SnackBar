@using SnackBar.Models;

<h1>Browse our delicious treats to your heart's content, @User.Identity.Name!</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
} 

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>